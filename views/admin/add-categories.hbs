<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">


  <!-- Navbar -->
  <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur"
    data-scroll="true">
    <div class="container-fluid py-1 px-3">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
          <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Admin</a></li>
          <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Category Management</li>
        </ol>
        <h6 class="font-weight-bolder mb-0">List of all categories</h6>
      </nav>
    </div>
  </nav>
  <!-- End Navbar -->



  <div class="container-fluid py-4">
    <div class="row">
      <div class="col-12">
        <div class="card my-4">
          <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
              <h6 class="text-white text-capitalize ps-3">CATEGORY MANAGEMENT</h6>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


    <div class="container">
        <div class="col-md-12 m-auto">
            <div class="container">
                <form action="/admin/add-categories" method="post">
                    <div class="form-group">
                        <label>Category</label>
                        <input type="text" class="form-control" name="Category" placeholder="Enter category name">
                    </div>
                    <button type="submit" class="btn btn-primary float-right m-4">ADD CATEGORY</button>
                </form>
            </div>
        </div>
    </div>
    </div>
    {{#if categories}}
    <div class="container">
        <table id="categories" class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name of category</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.Category}}</td>
                    <td><a href="/admin/delete-category/{{this._id}}"><button class="btn btn-danger"
                                onclick="return confirm('Do you want to delete {{this.Category}}?')">DELETE</button></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div class="justify-content-center">
        <h3 class="">PLEASE ADD CATEGORIES TO DISPLAY</h3>
    </div>
    {{/if}}


      <script>
    $(document).ready(function () {
      $('#categories').DataTable({
        dom: 'Bfrtip',
        buttons: [
          'copy', 'csv', 'excel', 'pdf', 'print'
        ]
      });
    });
  </script>

</main>