<section>
    <div class="container">
        <div class="col-md-12 m-auto">
            <div class="container mt-5 pl-5">
                <div class="text-center">
                    <h2 class="">CATEGORY MANAGEMENT</h2>
                </div>
                <form action="/admin/add-categories" method="post">
                    <div class="form-group">
                        <label>Category</label>
                        <input type="text" class="form-control" name="Category" placeholder="Enter category name">
                    </div>
                    <button type="submit" class="btn btn-primary float-right">ADD CATEGORY</button>
                </form>
            </div>
        </div>
    </div>
    </div>
    {{#if categories}}
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name of category</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.Category}}</td>
                    <td><a href="/admin/delete-category/{{this._id}}"><button class="btn btn-danger"
                                onclick="return confirm('Do you want to delete {{this.Category}}?')">DELETE</button></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div class="justify-content-center">
        <h3 class="">PLEASE ADD CATEGORIES TO DISPLAY</h3>
    </div>
    {{/if}}
</section>